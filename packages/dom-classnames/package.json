{
  "name": "@rdbird/dom-classnames",
  "version": "1.0.0-rc.4",
  "description": "",
  "homepage": "https://github.com/RdBird/dom-classnames/packages/dom-classnames#readme",
  "author": "Julien Polo <jpolo@auchan.fr>",
  "license": "MIT",
  "keywords": [
    "dom",
    "classnames"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RdBird/dom-classnames.git"
  },
  "bugs": {
    "url": "https://github.com/RdBird/dom-classnames/issues"
  },
  "dependencies": {},
  "config": {
    "root": "../../node_modules/.bin",
    "build": "../../build"
  },
  "scripts": {
    "build:clean": "$npm_package_config_root/shx rm -rf ../../build/$npm_package_name",
    "build:copy-files": "$npm_package_config_root/shx mkdir -p $npm_package_config_build/$npm_package_name/ && $npm_package_config_root/shx cp -ru '**/*.@(test|spec).js' $npm_package_config_build/$npm_package_name/",
    "build:copy-flow": "$npm_package_config_root/flow-copy-source . $npm_package_config_build/$npm_package_name --ignore '**/*.@(test|spec).js*'",
    "build:src": "$npm_package_config_root/babel . --ignore '**/*.@(test|spec).js' -d ../../build/$npm_package_name",
    "build": "npm run build:copy-flow && npm run build:copy-package.json && npm run build:src",
    "flow": "$npm_package_config_root/flow",
    "format": "$npm_package_config_root/eslint . --fix",
    "lint": "$npm_package_config_root/eslint .",
    "test": "$npm_package_config_root/jest",
    "validate": "npm run flow && npm run lint && npm run test",
    "publish:build": "npm run build:clean && npm run build",
    "publish:package": "npm run validate && npm run publish:build && npm publish $npm_package_config_build/$npm_package_name"
  }
}
